@page
@model SqEqModel
@{
    ViewData["Title"] = "Квадратное уравнение";
}
<h1>@ViewData["Title"]</h1>

<div>
    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>
        <form method="post" asp-page="SqEq">
            <div class="form-group">
                <label asp-for="A">A:</label>
                <input asp-for="A" class="form-control" placeholder="Enter A" autocomplete="off" value="@Model.A" />
            </div>
            <div class="form-group">
                <label asp-for="B">B:</label>
                <input asp-for="B" class="form-control" placeholder="Enter B" autocomplete="off" value="@Model.B" />
            </div>
            <div class="form-group">
                <label asp-for="C">C:</label>
                <input asp-for="C" class="form-control" placeholder="Enter C" autocomplete="off" value="@Model.C" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <div>
            <h2>Solution</h2>
            @Html.Raw(Model.Solution)
        </div>


</div>